{
  "builders": [
    {
      "name": "Flask container",
      "type": "docker",
      "image": "centos:7.6.1810",
      "commit": "true",
      "run_command": [
          "-d",
          "-i",
          "-t",
          "--name",
          "uav2608.flask.v1",
          "{{.Image}}",
          "/bin/bash"
      ],
      "changes": [
          "WORKDIR /app", 
          "EXPOSE 4000",
          "ENTRYPOINT [\"python\",\"index.py\"]"
      ]
    }
   ],

  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "./playbook.yaml"
    }
   ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "uav2608.flask.v1",
      "tag":"0.0.3"
    }
   ]
}

