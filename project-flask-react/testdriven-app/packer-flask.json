{
  "builders": [
    {
      "name": "docker",
      "type": "docker",
      "image": "python:3.6.6-slim",
      "commit": "true",
      "run_command": ["-d", "-i", "-t", "{{.Image}}", "/bin/sh"],
      "changes": [
         "WORKDIR /usr/src/app",
         "CMD [\"python\", \"manage.py\", \"runserver\", \"-h\", \"0.0.0.0\"]"
      ]
    }
   ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update -y",
        "apt-get install python -yq"
       ]
    },
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "playbook-flask.yaml",
      "extra_arguments": [
         "-v"
       ]
    }
   ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "uav2608/flask",
      "tag":"0.0.2"
    }
   ]
}


